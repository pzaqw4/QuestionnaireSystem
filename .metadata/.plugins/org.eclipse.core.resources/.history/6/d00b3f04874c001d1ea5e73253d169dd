                  <td class="th-sm  p-2 text-dark" width="15%">觀看統計</td>
            	</tr>
            	
            	<tr th:if="${searchSurveys} == null" th:each="survey,status : ${surveys}">
            	  <td>
            	  	<input th:value="${survey.postId}" th:name="postId" type="checkbox">
            	  </td>
            	  <td th:text="${status.count}"></td>
